{
  "name": "Roll20: Grim√≥rio do Tormenta20",
  "description": "Escolha magias diretamente na sua ficha!",
  "version": "0.0.10",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://app.roll20.net/editor*"
      ],
      "css": [
        "css/tormenta20_book.css"
      ],
      "js": [
        "third-party/jquery-3.6.0.min.js",
        "third-party/jquery-ui-1.12.1.min.js",
        "dist/main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/*",
        "images/32.png",
        "css/sheet.css",
        "sidebar-menu.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}
