{
  "manifest_version": 3,
  "name": "Roll20: Grim√≥rio do Tormenta20",
  "version": "0.4.4",
  "short_name": "Roll20: T20",
  "description": "Escolha magias, habilidades e poderes na ficha! Consulte regras e equipamentos do T20 no Roll20.",
  "author": "roll20tormenta20@pyanderson.dev",
  "homepage_url": "https://roll20tormenta20.pyanderson.dev/",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.roll20.net/editor*"
      ],
      "css": [
        "css/book.css",
        "css/enhancement.css"
      ],
      "js": [
        "third-party/jquery-3.7.1.min.js",
        "third-party/jquery-ui-1.12.1.min.js",
        "common/constants.js",
        "common/helpers.js",
        "common/dialog-manager.js",
        "common/element-factory.js",
        "features/powers.js",
        "features/spells.js",
        "features/equipments.js",
        "features/races.js",
        "features/character-sheet.js",
        "features/book.js",
        "features/enhancement.js",
        "index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/*",
        "css/sheet.css",
        "images/32.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
