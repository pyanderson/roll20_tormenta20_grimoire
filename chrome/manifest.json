{
  "name": "Roll20: Grim√≥rio do Tormenta20",
  "description": "Escolha magias diretamente na sua ficha!",
  "version": "0.3.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://app.roll20.net/editor*"
      ],
      "css": [
        "css/book.css"
      ],
      "js": [
        "third-party/jquery-3.7.1.min.js",
        "third-party/jquery-ui-1.12.1.min.js",
        "constants.js",
        "helpers.js",
        "element-factory.js",
        "powers.js",
        "spells.js",
        "character-sheet.js",
        "book.js",
        "index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/*",
        "css/sheet.css",
        "images/32.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}
